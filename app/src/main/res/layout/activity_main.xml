<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.pellegroot.mrpotatohead.MainActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="319dp">

        <ImageView
            android:id="@+id/potato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/potato"
            android:visibility="visible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/potato"
            android:contentDescription="@string/arms"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ears"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/eyebrows"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/eyes"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/glasses"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/hat"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/potato"
            android:contentDescription="@string/mouth"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/moustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/potato"
            android:contentDescription="@string/moustache"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/potato"
            android:contentDescription="@string/nose"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/shoes"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="176dp"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <CheckBox
            android:id="@+id/checkArms"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:contentDescription="@string/arms"
            android:onClick="checkClicked"
            android:text="@string/arms" />

        <CheckBox
            android:id="@+id/checkEars"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ears"
            android:onClick="checkClicked"
            android:text="@string/ears" />

        <CheckBox
            android:id="@+id/checkEyebrows"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/eyebrows"
            android:onClick="checkClicked"
            android:text="@string/eyebrows" />

        <CheckBox
            android:id="@+id/checkEyes"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="@string/eyes"
            android:onClick="checkClicked"
            android:text="@string/eyes" />

        <CheckBox
            android:id="@+id/checkGlasses"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:contentDescription="@string/glasses"
            android:onClick="checkClicked"
            android:text="@string/glasses" />

        <CheckBox
            android:id="@+id/checkHat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:contentDescription="@string/hat"
            android:onClick="checkClicked"
            android:text="@string/hat" />

        <CheckBox
            android:id="@+id/checkMouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:contentDescription="@string/mouth"
            android:onClick="checkClicked"
            android:text="@string/mouth" />

        <CheckBox
            android:id="@+id/checkMoustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:contentDescription="@string/moustache"
            android:onClick="checkClicked"
            android:text="@string/moustache" />

        <CheckBox
            android:id="@+id/checkNose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:contentDescription="@string/nose"
            android:onClick="checkClicked"
            android:text="@string/nose" />

        <CheckBox
            android:id="@+id/checkShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:contentDescription="@string/shoes"
            android:onClick="checkClicked"
            android:text="@string/shoes" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
